rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'components' collection
    match /components/{componentId} {
      
      // Anyone can read components (for the public gallery)
      allow read: if true;

      // Authenticated users can create new components.
      // They can also update likes and copies on existing components.
      allow write: if request.auth != null;
      
      // No one can delete components from the client.
      allow delete: if false;
    }
  }
}
